{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "lib": ["esnext"]
    },
    "exclude": ["packages/*/dist/**", "examples/*/dist/**"]
}
